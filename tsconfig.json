{
  "compilerOptions": {
    "module": "esnext",
    "target": "ES2020",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noEmitHelpers": true,
    "noEmitOnError": true,
    "skipLibCheck": true,
    "lib": ["ESNext", "dom"],
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "paths": {
      "~/*": ["src/*"],
      "@/*": ["src/*"],
      "@app/*": [
        "src/app/*"
      ],
      "@assets/*": [
        "src/assets/*"
      ],
      "@core/*": [
        "src/app/core/*"
      ],
      "@util/*": [
        "src/app/core/util/*"
      ],
      "@base/*": [
        "src/app/core/base-classes/*"
      ],
      "@dto/*": [
        "src/app/core/dto/*"
      ],
      "@const/*": [
        "src/app/core/const/*"
      ],
      "@mock/albaran/*": [
        "src/app/page/albaran/mock/*"
      ],
      "@service/albaran/*": [
        "src/app/page/albaran/service/*"
      ],
      "@services/*": [
        "src/app/core/services/*"
      ],
      "@directive/*": [
        "src/app/core/directives/*"
      ],
      "@pipe/*": [
        "src/app/core/pipes/*"
      ],
      "@component/*": [
        "src/app/core/components/*"
      ],
      "@router/*": [
        "src/app/router/*"
      ],
      "@albaran/*": [
        "src/app/page/albaran/*"
      ],
      "@environment": [
        "src/environments/environment"
      ]
    }
  },
  "include": ["./src/**/*.ios.ts", "./src/**/*.android.ts"],
  "files": ["./src/main.ts", "./references.d.ts", "./src/polyfills.ts"],
  "exclude": ["node_modules", "platforms"]
}
